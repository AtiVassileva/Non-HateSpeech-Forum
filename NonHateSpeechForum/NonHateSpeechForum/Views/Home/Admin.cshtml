@model IEnumerable<IdentityUser>

<div>
    <h3 style="text-align: center">Review User Roles</h3>
    <br/>
    <br/>
    
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Email</th>
            <th scope="col">Current role</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.Email</td>
                <td>Some role</td>
                <td>
                    <a asp-controller="Posts" asp-action="Approve" asp-route-id="@user.Id" class="btn btn-success">Approve</a>
                    <a asp-controller="Posts" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>