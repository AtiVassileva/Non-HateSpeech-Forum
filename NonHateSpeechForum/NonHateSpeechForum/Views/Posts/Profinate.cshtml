@model IEnumerable<Post>

<div>
    @if (!Model.Any())
    {
        <h3 style="text-align: center;">No posts to review.</h3>
    }
    else
    {
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Content</th>
                <th scope="col">Author</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <th scope="row">@post.Id</th>
                    <td>@post.Content</td>
                    <td>@post.Author!.Email</td>
                    <td>
                        <a asp-controller="Posts" asp-action="Approve" asp-route-id="@post.Id" class="btn btn-success">Approve</a>
                        <a asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>